#!/usr/bin/env ruby
require 'yaml'
require File.join(File.dirname(__FILE__), '../lib/mssql-kissmetrics.rb')
begin
    k = YAML.load_file 'config.yaml'
rescue StandardError => e
    puts "Create a file called config.yaml in the current directory"
    abort
end
MssqlKissmetrics::initialize(k['profile'], k['username'], k['password'], k['allowed_history_days'])